#!/bin/sh

cache_dir=$HOME/.jtalk
voice=nitech-jp-atr503-m001
voice_dir=/usr/share/hts-voice
sampling_frequency=16000

while getopts "fqv:c:s:" flag
do
  case $flag in
    \?) error=1; break;;
    f)  force=true ;;
    q)  quiet=true ;;
    v)  voice=$OPTARG ;;
    c)  cache_dir=$OPTARG ;;
    s)  sampling_frequency=$OPTARG ;;
  esac
done

shift $(( $OPTIND - 1 ))

phrase=$@

if [ ! $phrase ]
then
  error=2
fi

if [ $error ]
then
  echo "
  usage: `basename $0` [-f][q][-v voice][-c cache_dir] phrase
    -f : force regenerate
    -q : quiet, no play automatically with aplay
    -v : voice           ( default: nitech-jp-atr503-m001 )"
  for f in ${voice_dir}/*
  do
    if test -d $f
    then
      echo "      `basename ${f}`"
    fi
  done
  echo "
    -c : cache directory ( default: ~/.jtalk )
    -s : sampling frequency

  example: `basename $0` \"フジヤマ、ゲイシャ、ニンジャ！\"
"
  exit $error
fi

if ! test -d $cache_dir
then
  mkdir $cache_dir
fi

cache_file=${cache_dir}/${phrase}.wav

if ! test "${force}" != true -a -f $cache_file
then
  
  cd ${voice_dir}/${voice}

  echo "${phrase}" | open_jtalk \
  -td tree-dur.inf \
  -tf tree-lf0.inf \
  -tm tree-mgc.inf \
  -md dur.pdf \
  -mf lf0.pdf \
  -mm mgc.pdf \
  -dm mgc.win1 \
  -dm mgc.win2 \
  -dm mgc.win3 \
  -df lf0.win1 \
  -df lf0.win2 \
  -df lf0.win3 \
  -dl lpf.win1 \
  -ef tree-gv-lf0.inf \
  -em tree-gv-mgc.inf \
  -cf gv-lf0.pdf \
  -cm gv-mgc.pdf \
  -k gv-switch.inf \
  -s ${sampling_frequency} \
  -a 0.05 \
  -u 0.0 \
  -jm 1.0 \
  -jf 1.0 \
  -jl 1.0 \
  -x /var/lib/mecab/dic/open-jtalk/naist-jdic \
  -ow $cache_file

fi

if [ ! $option_q ] 
then
  aplay --quiet ${cache_file}
fi
